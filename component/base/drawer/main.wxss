.drawer-cover {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 2000;
  background: rgba(0, 0, 0, .6);
}
.drawer {
  width: 100%;
  height: 100%;
  color: inherit;
  background-color: #222;
  position: absolute;
  transition: all .3s;
}

.drawer-direction_top {
  transform: translateY(-100%)
}
.drawer-direction_left {
  transform: translateX(-100%)
}
.drawer-direction_right {
  transform: translateX(100%)
}
.drawer-direction_bottom {
  transform: translateY(100%)
}

.drawer-state_open > .drawer {
  transform: translate(0, 0);
}
.drawer-state_close {
  visibility: hidden;
}
