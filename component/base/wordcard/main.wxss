.wordcard {
  padding: 30rpx;
  background: #FFF;
  border-radius: 8rpx;
  box-shadow: 2rpx 2rpx 2rpx rgba(0,0,0,.2);
  position: relative;
}
.wordcard-pinyin {
  color: #aaa;
  font-size: 8pt;
}
.wordcard-title {
  font-size: 14pt;
  font-weight: bold;
  margin: 20rpx 0;
}
.wordcard-content {
  text-indent: 2em;
  line-height: 1.6;
  text-align: justify;
}
.wordcard::after {
  content: '百度词条';
  padding: 10rpx 20rpx;
  color: #FFF;
  background: #2196f3;
  position: absolute;
  right: 0;
  top: 30rpx;
}