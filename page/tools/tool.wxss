page {
  box-sizing: border-box;
}

.input {
  height: 100rpx;
  border-radius: 10rpx;
  background-color: #FFF;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.textarea {
  width: 100%;
  border-radius: 10rpx;
  background-color: #FFF;
  box-sizing: border-box;
  padding: 30rpx;
}

.addon {
  margin-left: 30rpx;
}

/**********************
 *        Table
***********************/
.table {
  border-radius: 8rpx;
  background-color: #FFF;
  box-shadow: 4rpx 4rpx 4rpx rgba(0, 0, 0, .2);
}
.table-header,
.table-row {
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
}
.table-col {
  flex: 1;
  width: 0;
}
.table-header {
  font-weight: bold;
  box-shadow: 0 2rpx 2rpx rgba(0, 0, 0, .2);
}
.table-row:nth-child(even) {
  background-color: rgb(220, 247, 234);
}

/**********************
 *     图片选择容器
***********************/
.chooseImage {
  --size: 300rpx;
  --color: #969798;
  width: var(--size);
  height: var(--size);
  border: 2rpx dashed var(--color);
  border-radius: 16rpx;
  color:  var(--color);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.chooseImage-icon {
  font-size: 30pt;
  margin-bottom: 10rpx;
}
.chooseImage:active {
  --color: var(--color-blue);
}
