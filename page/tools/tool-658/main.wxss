.editer {
  color: #BBB;
  height: 100vh;
  background: #3F3F3F;
  display: flex;
  flex-direction: column;
}
.editer-container {
  flex: 1;
  position: relative;
}
.editer-input {
  width: 100%;
  height: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.editer-footer {
  --h: 100rpx;
  height: var(--h);
  background: #3A3A3A;
  display: flex;
}
.editer-tools {
  flex: 1;
  height: var(--h);
  position: relative;
}
.editer-footer_extra {
  width: var(--h);
  height: var(--h);
  line-height: var(--h);
  text-align: center;
  border-left: 10rpx solid #353535;
}