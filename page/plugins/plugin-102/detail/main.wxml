<view class="content">
  <!-- 搜索框 -->
  <view class="search">
    <view class="search-icon icon-search"></view>
    <input
      class="search-input"
      placeholder="请输入关键词"
      confirm-type="search"
      value="{{ keyword }}"
      bindinput="inputHandler"
      bindconfirm="refreshData"
    ></input>
  </view>
  <!-- 搜索框END -->

  <!-- 许愿列表 -->
  <view class="wish-list">
    <wish-detail custom="wish-item" data="{{ item }}" wx:for="{{ list }}" wx:key="_id" />
    <view class="nomore" wx:if="{{ loadEnd }}">- 这是底线了 -</view>
  </view>
  <!-- 许愿列表END -->
</view>
