.comment-header {
  --h: 120rpx;
  height: var(--h);
  line-height: var(--h);
  font-weight: bold;
}
.comment-item {
  display: flex;
}
.comment-item_avatar {
  --s: 80rpx;
  width: var(--s);
  height: var(--s);
  margin-right: 30rpx;
  border-radius: 50%;
  background-color: #FFF;
}
.comment-item_main {
  flex: 1;
  width: 0;
}
.comment-item_name {
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-weight: bold;
}
.comment-item + .comment-item {
  margin-top: 60rpx;
}
.comment-item_content {
  text-align: justify;
}

.comment-loadend {
  text-align: center;
  margin-top: 60rpx;
  opacity: .7;
  font-size: 8pt;
}