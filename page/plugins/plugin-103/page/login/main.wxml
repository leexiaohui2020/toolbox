<view class="content">
  <view class="brand">ToolPlus管理后台</view>
  <view class="form">
    <view class="form-item">
      <text class="form-icon icon-userfill"></text>
      <input
        class="form-input"
        placeholder="帐号"
        value="{{ username }}"
        data-id="username"
        bindinput="inputHandler"
      />
    </view>

    <view class="form-item">
      <text class="form-icon icon-lockfill"></text>
      <input
        type="password"
        class="form-input"
        placeholder="密码"
        value="{{ password }}"
        data-id="password"
        bindinput="inputHandler"
      />
    </view>

    <button
      class="button button_block button-color_blue button_round"
      bindtap="submitHandler"
    >登录</button>
  </view>
</view>
