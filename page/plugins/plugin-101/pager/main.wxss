@import '../style/button.wxss';
page {
  --color-theme: #FD113A;
}

.swiper {
  height: 100vh;
  background: #FFF;
}
.swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
}
.swiper-image {
  max-width: 100%;
  max-height: 100%; 
}

.pager {
  top: 0;
  right: 0;
  width: 100%;
  position: absolute;
  padding: 30rpx;
  font-size: 8pt;
  font-weight: bold;
  z-index: 100;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, .3);
  color: #FFF;
}
.pager > view:first-child {
  flex: 1;
  width: 0;
  margin-right: 30rpx;
}

.btns {
  padding: 30rpx;
}
.btns > .btn {
  margin: 0 10rpx;
}