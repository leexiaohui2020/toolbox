.cartoon {
  position: relative;
}
.cartoon-pic {
  width: 100%;
  height: auto;
}
.cartoon-title {
  font-weight: bold;
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.cartoon-star, .cartoon-new {
  display: flex;
  align-items: center;
  font-size: 8pt;
}
.cartoon-star_bar {
  flex: 1;
}

.cartoon-new_title {
  flex: 1;
  color: var(--color-theme);
  width: 0;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}